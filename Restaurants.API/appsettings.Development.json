{
  "ConnectionStrings": {
    "RestaurantsDb": "Server=.;Database=Restaurants;Trusted_Connection=True;Encrypt=false"
  },
    "Serilog": {
        "MinimumLevel": {
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:dd-MM-yy HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/Restaurant-API-.log",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true
                }
            }
        ]
    }
}
